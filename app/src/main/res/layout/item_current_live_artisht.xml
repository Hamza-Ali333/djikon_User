<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="6dp"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_SubscribeArtist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_avatar" />
        <ProgressBar
            android:id="@+id/progressBarProfile"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateDrawable="@drawable/progressbar"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/img_SubscribeArtist"
            app:layout_constraintEnd_toEndOf="@+id/img_SubscribeArtist"
            app:layout_constraintStart_toStartOf="@+id/img_SubscribeArtist"
            app:layout_constraintTop_toTopOf="@+id/img_SubscribeArtist" />

        <TextView
            android:id="@+id/txt_msg_sender_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/img_SubscribeArtist"
            android:fontFamily="@font/montserrat"
            android:text="Jhon Ibrahim"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/img_SubscribeArtist"
            app:layout_constraintStart_toEndOf="@+id/img_SubscribeArtist"
            app:layout_constraintTop_toTopOf="@+id/img_SubscribeArtist" />


        <ImageView
            android:id="@+id/txt_UnFollow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_dot" />

        <View
            android:id="@+id/divider10"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="2dp"
            android:background="@color/Graycolor"
            app:layout_constraintTop_toBottomOf="@+id/img_SubscribeArtist"
            tools:layout_editor_absoluteX="6dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>