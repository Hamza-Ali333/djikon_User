<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:fillViewport="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/img_dj_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_doctor" />

        <TextView
            android:id="@+id/txt_dj_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Julian Hudson"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_dj_profile" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="920 joannie Parks Apt. 850"
            android:textColor="#fff"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_dj_name"
            app:layout_constraintStart_toStartOf="@+id/txt_dj_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_dj_name" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <Button
            android:id="@+id/btn_RequestASong"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lighred_roundshap"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="REQEST A SONG"
            android:textColor="#fff"
            app:layout_constraintEnd_toStartOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/fullroundshape"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Message"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline10"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lighblue_roundshap"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Follow"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="@+id/button4"
            app:layout_constraintStart_toStartOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <TextView
            android:id="@+id/txt_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1434"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/btn_RequestASong"
            app:layout_constraintStart_toStartOf="@+id/btn_RequestASong"
            app:layout_constraintTop_toTopOf="@+id/button5" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/txt_follower"
            app:layout_constraintStart_toStartOf="@+id/txt_follower"
            app:layout_constraintTop_toBottomOf="@+id/txt_follower" />

        <View
            android:id="@+id/divider"
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/txt_follower" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <RelativeLayout
            android:id="@+id/rlt_about"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#fff"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABOUT"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_about_dj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/heading"
                android:text="Music Night And Event that is the question for you.Here are some of the advatafes and disadvantages of both,so you will be confident when purching an Servic."
                android:textColor="@color/Graycolor"
                android:textSize="18sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="Services"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlt_about" />

        <ImageView
            android:id="@+id/img_all_servic"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/txt_ViewAll"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txt_ViewAll"
            app:srcCompat="@drawable/ic_arrow_forward" />

        <TextView
            android:id="@+id/txt_ViewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:text="View All"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/img_all_servic"
            app:layout_constraintTop_toBottomOf="@+id/rlt_about" />

        <Button
            android:id="@+id/btn_book_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorBlue"
            android:text="Book This DJ"
            android:textColor="#fff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_photo_2"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.cardview.widget.CardView
            android:id="@+id/servic1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:paddingBottom="1dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toStartOf="@+id/servic2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <RelativeLayout
                android:id="@+id/rlt_servic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp">

                <ImageView
                    android:id="@+id/img_servic1_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:paddingLeft="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dj_event" />

                <TextView
                    android:id="@+id/txt_servic1_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_servic1_image"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:text="Night Sirves"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_servic1_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_servic1_name"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="1dp"
                    android:text="A product description is the marketing copy that explains what a product is and why it’s worth purchasing."
                    android:textColor="@color/Graycolor"
                    android:textSize="8sp" />

                <RatingBar
                    android:id="@+id/ratbar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txt_servic1_description"
                    android:layout_marginTop="2dp"
                    android:numStars="5"
                    android:rating="4" />

                <TextView
                    android:id="@+id/txt_servic1_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ratbar"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:text="Charges"
                    android:textColor="@color/Graycolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_service1_prize"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/ratbar"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/blueround_stroke"
                    android:gravity="center"
                    android:text="$5"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/servic2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/servic1"
            app:layout_constraintEnd_toStartOf="@+id/servic3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/servic1"
            app:layout_constraintTop_toTopOf="@+id/servic1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp">

                <ImageView
                    android:id="@+id/img_servic2_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:paddingLeft="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dj_event" />

                <TextView
                    android:id="@+id/txt_servic2_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_servic2_image"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:text="Music Night"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_servic2_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_servic2_name"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="1dp"
                    android:text="A product description is the marketing copy that explains what a product is and why it’s worth purchasing."
                    android:textColor="@color/Graycolor"
                    android:textSize="8sp" />

                <RatingBar
                    android:id="@+id/ratbar_servic2"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txt_servic2_description"
                    android:layout_marginTop="2dp"
                    android:numStars="5"
                    android:rating="3" />

                <TextView
                    android:id="@+id/txt_servic2_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ratbar_servic2"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:text="Charges"
                    android:textColor="@color/Graycolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_service2_prize"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/ratbar_servic2"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/blueround_stroke"
                    android:gravity="center"
                    android:text="$5"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/servic3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/servic2"
            app:layout_constraintEnd_toEndOf="@+id/img_all_servic"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/servic2"
            app:layout_constraintTop_toTopOf="@+id/servic2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="2dp">

                <ImageView
                    android:id="@+id/img_servic3_image"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:paddingLeft="1dp"
                    android:paddingTop="1dp"
                    android:paddingRight="1dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dj_event" />

                <TextView
                    android:id="@+id/txt_servic3_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_servic3_image"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:text="Catring Sirves"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_servic3_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_servic3_name"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="1dp"
                    android:text="A product description is the marketing copy that explains what a product is and why it’s worth purchasing."
                    android:textColor="@color/Graycolor"
                    android:textSize="8sp" />

                <RatingBar
                    android:id="@+id/ratbar_servic3"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/txt_servic3_description"
                    android:layout_marginTop="2dp"
                    android:numStars="5"
                    android:rating="2" />

                <TextView
                    android:id="@+id/txt_servic3_charges"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ratbar_servic3"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="2dp"
                    android:text="Charges"
                    android:textColor="@color/Graycolor"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_service3_prize"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="12sp"
                    android:layout_below="@+id/ratbar_servic3"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/blueround_stroke"
                    android:gravity="center"
                    android:text="$5"
                    android:textColor="@color/colorBlack" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Photos"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/servic1"
            app:layout_constraintTop_toBottomOf="@+id/servic1" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:text="18"
            android:textColor="#fff"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/servic3"
            app:layout_constraintTop_toBottomOf="@+id/servic3"
            app:srcCompat="@drawable/ic_arrow_forward" />

        <ImageView
            android:id="@+id/event_photo1"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/event_photo_2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:srcCompat="@drawable/photo3" />

        <ImageView
            android:id="@+id/event_photo_2"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@+id/event_photo3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/event_photo1"
            app:layout_constraintTop_toTopOf="@+id/event_photo1"
            app:srcCompat="@drawable/dj_event" />

        <ImageView
            android:id="@+id/event_photo3"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/event_photo_2"
            app:layout_constraintTop_toTopOf="@+id/event_photo_2"
            app:srcCompat="@drawable/photo2" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>